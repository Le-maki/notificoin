<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.github.corentinc.notificoin.ui.home.HomeFragment"
        android:label="@string/titleHome"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/editSearchAction"
            app:destination="@id/navigation_editSearchFragment" />
        <action
            android:id="@+id/goToAdListAction"
            app:destination="@id/navigation_ad_list" />
    </fragment>

    <fragment
        android:id="@+id/navigation_ad_list"
        android:name="com.github.corentinc.notificoin.ui.adList.AdListFragment"
        android:label="@string/titleAdList"
        tools:layout="@layout/fragment_ad_list">
        <argument
            android:name="searchId"
            android:defaultValue="-1"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.github.corentinc.notificoin.ui.notifications.SettingsFragment"
        android:label="@string/titleSettings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/navigation_editSearchFragment"
        android:name="com.github.corentinc.notificoin.ui.editSearch.EditSearchFragment"
        android:label="@string/titleEditSearch"
        tools:layout="@layout/fragment_edit_search">
        <argument
            android:name="id"
            app:argType="integer" />
        <argument
            android:name="url"
            app:argType="string" />
        <argument
            android:name="title"
            app:argType="string" />

    </fragment>

</navigation>